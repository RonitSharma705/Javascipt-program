   let days =parseInt(prompt("Enter a Day Number"))
   switch(days){
      case 1:
         document.getElementById("head").innerHTML=("Sunday")
         break;
      case 2:
         document.getElementById("head").innerHTML=("Monday")
         break;
      case 3:
         document.getElementById("head").innerHTML=("Tuesday")
         break;
      case 4:
         document.getElementById("head").innerHTML=("Wednesday")
         break;
      case 5:
         document.getElementById("head").innerHTML=("Thursday")
         break;
      case 6:
         document.getElementById("head").innerHTML=("Friday")
         break;
      case 7:
         document.getElementById("head").innerHTML=("Saturday")
         break;
      default:
         document.getElementById("head").innerHTML=("Error")
   }
